<body>
<h1>Meme Generator</h1>

<!-- Meme Canvas -->
<div class="meme-wrapper">
    <canvas id="memeCanvas" width="500" height="500"></canvas>
</div>

<div class="controls">
    <button onclick="downloadMeme()">Speichern</button>
    <a href="/">Neues Meme laden</a>
</div>

<script>
    const memeCanvas = document.getElementById("memeCanvas");
    const ctx = memeCanvas.getContext("2d");

    let img = new Image();
    img.src = "[[${memePath}]]"; // Spring Boot liefert hier den Bildpfad

    img.onload = function() {
        drawMeme();
    };

    function drawMeme() {
        ctx.clearRect(0, 0, memeCanvas.width, memeCanvas.height);
        ctx.drawImage(img, 0, 0, memeCanvas.width, memeCanvas.height);
    }

    function downloadMeme() {
        const link = document.createElement("a");
        link.download = "meme.png";
        link.href = memeCanvas.toDataURL("image/png");
        link.click();
    }
</script>
</body>
